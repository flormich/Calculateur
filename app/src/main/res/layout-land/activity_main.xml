<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:layout_column="7"
    android:layout_row="9"
    android:layout_gravity="center"

    >

    <TextView
        android:id="@+id/tvResultat"
        style="@style/ecran"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_marginTop="5dp" />

    <RadioGroup
        android:checkedButton="@id/convEuros"
        android:layout_marginTop="20dp"
        android:layout_column="7"
        android:layout_row="1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        >

        <RadioButton
            android:id="@+id/convEuros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="btEur" />
        <TextView
            style="@style/txRadioBt"
            android:id="@+id/convEuro"
            android:text="€" />

        <RadioButton
            android:id="@+id/convDollard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="btDoll"
            />
        <TextView
            style="@style/txRadioBt"
            android:id="@+id/tvDollard"
            android:text="$" />

        <RadioButton
            android:id="@+id/convLivre"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="btLivre"
            />
        <TextView
            style="@style/txRadioBt"
            android:id="@+id/tvLivre"
            android:text="£" />

        <RadioButton
            android:id="@+id/convBit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="btBtc"
            />
        <TextView
            style="@style/txRadioBt"
            android:id="@+id/tvBitcoins"
            android:text="B" />
    </RadioGroup>


    <RadioGroup
        android:checkedButton="@id/rbDeg"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_column="8"
        android:layout_row="2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        >

        <RadioButton
            android:id="@+id/rbDeg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="btDeg" />
        <TextView
            style="@style/txRadioBt"
            android:id="@+id/tvDeg"
            android:text="deg" />

        <RadioButton
            android:id="@+id/rbRad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="btRad"
            />
        <TextView
            style="@style/txRadioBt"
            android:id="@+id/tvRad"
            android:text="rad" />

        <RadioButton
            android:id="@+id/rbGrd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="btGrd"
            />
        <TextView
            style="@style/txRadioBt"
            android:id="@+id/tvGrd"
            android:text="grd" />

    </RadioGroup>


    <Button
        android:layout_marginTop="10dp"
        style="@style/butons"
        android:text="@string/delete"
        android:background="#5555aa22"
        android:layout_width="176dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:onClick="effacer"
        />

    <Button
        android:layout_marginTop="10dp"
        style="@style/operation"
        android:layout_column="3"
        android:layout_row="2"
        android:text="/"
        android:onClick="diviser"
        />

    <Button
        android:id="@+id/sept"
        style="@style/butons"
        android:layout_column="0"
        android:layout_row="5"
        android:text="7"
        android:onClick="touch"
        />

    <Button
        style="@style/butons"
        android:layout_column="1"
        android:layout_row="5"
        android:text="8"
        android:onClick="touch"
        />

    <Button
        style="@style/butons"
        android:layout_column="2"
        android:layout_row="5"
        android:text="9"
        android:onClick="touch"
        />

    <Button
        style="@style/operation"
        android:layout_column="3"
        android:layout_row="5"
        android:text="X"
        android:onClick="multi"
        />

    <Button
        style="@style/butons"
        android:layout_column="0"
        android:layout_row="6"
        android:text="4"
        android:onClick="touch"
        />

    <Button
        style="@style/butons"
        android:layout_column="1"
        android:layout_row="6"
        android:text="5"
        android:onClick="touch"
        />

    <Button
        style="@style/butons"
        android:layout_column="2"
        android:layout_row="6"
        android:text="6"
        android:onClick="touch"
        />

    <Button
        style="@style/operation"
        android:layout_column="3"
        android:layout_row="6"
        android:text="-"
        android:onClick="moins"
        />

    <Button
        style="@style/butons"
        android:layout_column="0"
        android:layout_row="7"
        android:text="1"
        android:onClick="touch"
        />

    <Button
        style="@style/butons"
        android:layout_column="1"
        android:layout_row="7"
        android:text="2"
        android:onClick="touch"
        />

    <Button
        style="@style/butons"
        android:layout_column="2"
        android:layout_row="7"
        android:text="3"
        android:onClick="touch"
        />

    <Button
        style="@style/operation"
        android:layout_column="3"
        android:layout_row="7"
        android:text="+"
        android:onClick="plus"
        />

    <Button
        style="@style/butons"
        android:layout_column="0"
        android:layout_row="8"
        android:text="0"
        android:onClick="touch"
        />

    <Button
        style="@style/butons"
        android:layout_column="1"
        android:layout_row="8"
        android:text="."
        android:onClick="point"
        />

    <Button
        style="@style/butons"
        android:background="#550055ff"
        android:layout_width="176dp"
        android:layout_row="8"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:text="="
        android:onClick="egale"

        />

</GridLayout>